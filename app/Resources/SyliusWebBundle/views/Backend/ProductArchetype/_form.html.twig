{% form_theme form 'SyliusWebBundle:Backend:forms.html.twig' %}
{#{% form_theme form 'SyliusAttributeBundle::attributeCollection.html.twig' %}#}

<fieldset>
    {{ form_row(form.code, {'attr': {'class': 'input-lg'}}) }}
    {{ form_row(form.type, {'attr': {'class': 'input-lg'}}) }}
    {{ form_row(form.translations, {'attr': {'class': 'input-lg'}}) }}
    {{ form_row(form.parent) }}
    {{ form_row(form.options) }}
    {#{{ form_row(form.attributes) }}#}
    {#{{ form_row(form.widgets) }}#}

    <div class="" id="widgets">
        <div data-form-type="collection" {#{{ block('widget_container_attributes') }}#}>
            <div class="form-group">
                <div>
                    <div data-form-collection="list" class="row collection-list" data-length="{{ form.widgets|length }}">
                        {{ form_row(form.widgets) }}
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-success btn-block" data-toggle="modal" data-target="#widget-modal">
            <i class="glyphicon glyphicon-plus"></i>
            {{ 'add attribute' }}
        </a>
    </div>
</fieldset>

{{ form_widget(form._token) }}
